@model Application.Web.Models.ProfileDetailsViewModel

@{
    ViewBag.Title = "My Profile";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="bs-component">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">My Profile</h3>
                </div>
                <div class="panel-body">
                    @if (Model.ImageId != null)
                    {
                        <img src="@Url.Action("GetPhoto", "Profile", new { id = Model.ImageId })" class="img-responsive center-block" />
                    }
                    else
                    {
                        <img src="~/Content/imgs/defaultProfilePhoto.jpg" class="img-responsive center-block" />
                    }
                    <hr />

                    <ul class="list-group">
                        <li class="list-group-item">
                            Username: <strong>@Model.UserName</strong>
                        </li>
                        <li class="list-group-item">
                            Email: <strong>@Model.Email</strong>
                        </li>
                        <li class="list-group-item">
                            First Name: <strong>@(Model.FirstName != null ? Model.FirstName : "-")</strong>
                        </li>
                        <li class="list-group-item">
                            Last Name: <strong>@(Model.LastName != null ? Model.LastName : "-")</strong>
                        </li>
                        <li class="list-group-item">
                            Birth Date: <strong>@Model.DateOfBirth</strong>
                        </li>
                        <li class="list-group-item">
                            Town: <strong>@(Model.TownName != null ? Model.TownName : "-")</strong>
                        </li>
                        <li class="list-group-item">
                            Address: <strong>@(Model.Address != null ? Model.Address : "-")</strong>
                        </li>
                        <li class="list-group-item">
                            Phone Number: <strong>@(Model.ContactPhone != null ? Model.ContactPhone : "-")</strong>
                        </li>
                    </ul>
                </div>
            </div>
            <a class="btn btn-primary btn-block" href="/Profile/EditProfile">Edit Profile</a>
            <a class="btn btn-default btn-block" href="/Account/Manage">Change Password</a>
        </div>
    </div>
</div>